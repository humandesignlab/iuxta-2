{
	"version": 2,
	"name": "nextjs",
	"build" : {
		"env": {
			"MONGO_URI": "@iuxta-2-mongo-uri",
			"GOOGLE_ID": "@iuxta-2-google-id",
			"GOOGLE_SECRET": "@iuxta-2-google-secret",
			"EMAIL_FROM": "@iuxta-2-email-from",
			"EMAIL_SERVER": "@iuxta-2-email-server",
			"EMAIL_PORT": "@iuxta-2-email-port",
			"EMAIL_USERNAME": "@iuxta-2-email-username"
		}
	},
	"builds": [
		{"src": "package.json", "use": "@now/next"},
		{ "src": "/static/*", "use": "@now/static" }
	],
	"routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}